/* pages/random/random.wxss */
.container {
  padding: 20rpx;
}

.input-section {
  margin-bottom: 30rpx;
}

.menu-section {
  margin-top: 30rpx;
}

.day-card {
  background: #ffffff;
  border-radius: 12rpx;
  padding: 20rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.day-header {
  border-bottom: 2rpx solid #f0f0f0;
  padding-bottom: 16rpx;
  margin-bottom: 16rpx;
}

.day-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333333;
}

.recipe-list {
  padding: 10rpx 0;
}

.recipe-item {
  padding: 16rpx 0;
  border-bottom: 1rpx solid #f5f5f5;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.recipe-item:last-child {
  border-bottom: none;
}

.recipe-name {
  font-size: 28rpx;
  color: #666666;
  flex: 1;
}

.recipe-item .t-button {
  margin-left: 16rpx;
}

.search-container {
  display: flex;
  align-items: center;
  padding: 16rpx;
  gap: 16rpx;
}
.end-text {
  text-align: center;
  padding: 50rpx 0;
  color: #999;
  font-size: 24rpx;
}