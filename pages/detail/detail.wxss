/* pages/detail/detail.wxss */
.title {
  font-size: 20px;    /* 大字号 */
  font-weight: bold;  /* 加粗 */
  margin: 20px 0;    /* 边距 */
  color: #333;       /* 颜色 */
}

.title1 {
  display: block; /* 将 text 转为块级元素 */
  text-align: center; /* 水平居中 */
  font-size: 20px;    /* 大字号 */
  font-weight: bold;  /* 加粗 */
  margin: 20px 0;    /* 边距 */
  color: #333;       /* 颜色 */
}

.tags-container {
  display: flex;          /* 启用 Flex 布局 */
  flex-direction: row;    /* 横向排列 */
  flex-wrap: nowrap;      /* 禁止换行 */
  gap: 20rpx;             /* 子项间距（小程序需基础库 2.4.0+） */
  overflow-x: auto;       /* 超出部分横向滚动 */
  padding: 10rpx 0;       /* 容器内边距 */
}

.notes-container {
  padding: 20rpx 30rpx;  /* 内边距 */
  background-color: #f8f8f8;  /* 浅灰色背景 */
  border-radius: 8rpx;  /* 圆角 */
  margin: 10rpx 0;  /* 外边距 */
}

.notes-container text {
  display: block;  /* 块级显示 */
  line-height: 1.6;  /* 行高 */
  color: #333;  /* 文字颜色 */
  white-space: pre-wrap;  /* 保留换行符和空格 */
  word-wrap: break-word;  /* 长单词换行 */
}

.empty-note {
  color: #999 !important;  /* 浅灰色文字 */
  font-style: italic;  /* 斜体 */
  text-align: center;  /* 居中显示 */
}